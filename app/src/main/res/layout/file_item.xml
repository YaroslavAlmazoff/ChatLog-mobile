<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@color/transparent"
    android:gravity="start">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/file_image_wrapper"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        android:background="@drawable/file_rounded"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <ImageView
            android:id="@+id/file_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/file_rounded"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/txt"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            android:id="@+id/file_name"
            android:layout_weight="0.7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="8pt"
            android:textFontWeight="400"
            android:text="Loading..."
            android:textColor="@color/white"
            android:textAlignment="textStart"
            android:fontFamily="sans-serif-thin"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/file_actions"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/file_download"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="9pt"
                android:textFontWeight="400"
                android:text="@string/download"
                android:textColor="@color/neon_blue"
                android:textAlignment="textStart"
                android:fontFamily="sans-serif-thin"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                android:id="@+id/file_delete"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="9pt"
                android:textFontWeight="400"
                android:text="@string/delete"
                android:textColor="@color/red_neon"
                android:textAlignment="textStart"
                android:fontFamily="sans-serif-thin"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/file_download"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                android:id="@+id/file_cancel"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="9pt"
                android:textFontWeight="400"
                android:text="@string/cancel"
                android:textColor="@color/green_neon"
                android:textAlignment="textStart"
                android:fontFamily="sans-serif-thin"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/file_delete"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</LinearLayout>