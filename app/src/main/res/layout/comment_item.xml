<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/comment_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:layout_margin="5dp"
    android:layout_marginBottom="10dp"
    android:orientation="vertical">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:id="@+id/comment_item_avatar_wrapper"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@color/transparent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:cardCornerRadius="314dp"
            android:elevation="10dp">
            <ImageView
                android:id="@+id/comment_item_avatar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/nav_profile"
                android:background="@drawable/rounded"/>
        </androidx.cardview.widget.CardView>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/comment_item_avatar_wrapper"
            android:padding="10dp">
            <TextView
                android:id="@+id/comment_name_and_surname"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/neon_blue"
                android:textSize="9pt"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/comment_date"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/navy_neon"
                android:textSize="8pt"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toTopOf="@id/comment_name_and_surname"
                app:layout_constraintBottom_toBottomOf="@id/comment_name_and_surname"
                app:layout_constraintStart_toEndOf="@id/comment_name_and_surname"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/comment_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        android:textSize="11pt" />
</LinearLayout>