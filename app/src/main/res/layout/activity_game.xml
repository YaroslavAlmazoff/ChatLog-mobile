<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient2"
    tools:context=".GameActivity">
    <LinearLayout
        android:id="@+id/game_head"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/transparent_dark_ultra"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.cardview.widget.CardView
            android:id="@+id/game_avatar_wrapper"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="20dp"
            android:background="@color/transparent"
            app:cardCornerRadius="20dp"
            android:elevation="10dp">
            <ImageView
                android:id="@+id/game_avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/games"
                android:background="@color/black"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/game_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-thin"
            android:text="game title"
            android:textColor="@color/white"
            android:textSize="18pt"
            android:padding="20dp"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowColor="@color/red_neon"
            android:shadowRadius="50"
            android:layout_weight="1.5"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/transparent_middle"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/game_head"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/game_bottom_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent">
                <TextView
                    android:id="@+id/game_version"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Version"
                    android:textColor="@color/neon_blue"
                    android:textSize="14pt"
                    android:padding="20dp"
                    android:shadowDx="5"
                    android:shadowDy="5"
                    android:shadowColor="@color/red_neon"
                    android:shadowRadius="50"
                    android:layout_weight="1"/>

                <com.sanojpunchihewa.glowbutton.GlowButton
                    android:id="@+id/download_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/blue_button"
                    android:padding="20dp"
                    android:text="@string/download"
                    android:textColor="@color/black"
                    android:textFontWeight="200"
                    android:textSize="10pt"
                    app:buttonColor="@color/neon_blue"
                    app:glowColor="@color/neon_blue" />
                <TextView
                    android:id="@+id/game_downloaded"
                    android:visibility="gone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-thin"
                    android:text="@string/downloaded"
                    android:textColor="@color/green_neon"
                    android:textSize="10pt"
                    android:padding="20dp"
                    android:shadowDx="5"
                    android:shadowDy="5"
                    android:shadowColor="@color/red_neon"
                    android:shadowRadius="50"
                    android:layout_weight="1"/>
            </LinearLayout>
            <TextView
                android:id="@+id/game_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/white"
                android:textSize="10pt"
                android:padding="20dp"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowColor="@color/neon_blue"
                android:shadowRadius="50"
                app:layout_constraintTop_toBottomOf="@id/game_bottom_head"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentDetails"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        class="com.chatlog.chatlog.Navigation"/>
</androidx.constraintlayout.widget.ConstraintLayout>

