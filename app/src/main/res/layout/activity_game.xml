<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient2"
    tools:context=".GameActivity">
    <LinearLayout
        android:id="@+id/game_head"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/transparent_dark_ultra"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.cardview.widget.CardView
            android:id="@+id/game_avatar_wrapper"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="20dp"
            android:background="@color/transparent"
            app:cardCornerRadius="20dp"
            android:elevation="10dp">
            <ImageView
                android:id="@+id/game_avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/games"
                android:background="@color/black"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/game_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-thin"
            android:text="game title"
            android:textColor="@color/white"
            android:textSize="18pt"
            android:padding="20dp"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowColor="@color/red_neon"
            android:shadowRadius="50"
            android:layout_weight="1.5"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/transparent_middle"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/game_head"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/game_bottom_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent">
                <TextView
                    android:id="@+id/game_version"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Version"
                    android:textColor="@color/neon_blue"
                    android:textSize="14pt"
                    android:padding="20dp"
                    android:shadowDx="5"
                    android:shadowDy="5"
                    android:shadowColor="@color/red_neon"
                    android:shadowRadius="50"
                    android:layout_weight="1"/>

                <com.sanojpunchihewa.glowbutton.GlowButton
                    android:id="@+id/download_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/blue_button"
                    android:padding="20dp"
                    android:text="@string/download"
                    android:textColor="@color/black"
                    android:textFontWeight="200"
                    android:textSize="10pt"
                    app:buttonColor="@color/neon_blue"
                    app:glowColor="@color/neon_blue" />
                <TextView
                    android:id="@+id/game_downloaded"
                    android:visibility="gone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-thin"
                    android:text="@string/downloaded"
                    android:textColor="@color/green_neon"
                    android:textSize="10pt"
                    android:padding="20dp"
                    android:shadowDx="5"
                    android:shadowDy="5"
                    android:shadowColor="@color/red_neon"
                    android:shadowRadius="50"
                    android:layout_weight="1"/>
            </LinearLayout>
            <TextView
                android:id="@+id/game_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/white"
                android:textSize="10pt"
                android:padding="20dp"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowColor="@color/neon_blue"
                android:shadowRadius="50"
                app:layout_constraintTop_toBottomOf="@id/game_bottom_head"/>
            <TextView
                android:id="@+id/game_open_reviews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:textColor="@color/neon_blue"
                android:textSize="10pt"
                android:padding="20dp"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowColor="@color/white"
                android:shadowRadius="50"
                app:layout_constraintTop_toBottomOf="@id/game_description"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/reviews_wrapper"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent_darkest">
        <TextView
            android:id="@+id/reviews_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:textColor="@color/white"
            android:textSize="10pt"
            android:padding="20dp"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowColor="@color/neon_blue"
            android:shadowRadius="50"
            android:textAlignment="textStart"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/open_write_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/open_write_review"
            android:textColor="@color/neon_blue"
            android:textSize="10pt"
            android:padding="20dp"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowColor="@color/neon_blue"
            android:shadowRadius="50"
            android:textAlignment="textStart"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/reviews_cancel"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:id="@+id/close_write_review"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/write_review_cancel"
            android:textColor="@color/neon_blue"
            android:textSize="10pt"
            android:padding="20dp"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowColor="@color/neon_blue"
            android:shadowRadius="50"
            android:textAlignment="textStart"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/reviews_cancel"
            android:layout_marginLeft="15dp"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/write_review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/reviews_cancel">
            <EditText
                android:id="@+id/review_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:background="@drawable/game_comment_field"
                android:lines="4"
                android:hint="@string/write_review_hint"
                android:layout_margin="20dp"
                android:textColor="@color/white"
                android:padding="10dp"
                app:layout_constraintTop_toTopOf="parent"/>
            <com.sanojpunchihewa.glowbutton.GlowButton
                android:id="@+id/send_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/blue_button"
                android:layout_margin="20dp"
                android:text="@string/send"
                android:textColor="@color/black"
                android:textFontWeight="200"
                android:textSize="15dp"
                app:buttonColor="@color/neon_blue"
                app:glowColor="@color/neon_blue"
                app:layout_constraintTop_toBottomOf="@id/review_field" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/reviews"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@id/write_review"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentDetails"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        class="com.chatlog.chatlog.Navigation"/>
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/notifications"
        class="com.chatlog.chatlog.Notifications"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>

