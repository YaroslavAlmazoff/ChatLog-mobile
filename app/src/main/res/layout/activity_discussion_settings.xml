<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient4"
    tools:context=".DiscussionSettingsActivity">
    <com.sanojpunchihewa.glowbutton.GlowButton
        android:id="@+id/back_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:background="@drawable/blue_empty_button"
        android:padding="15dp"
        android:text="@string/go_back"
        android:textColor="@color/neon_blue"
        android:textFontWeight="100"
        android:textSize="7pt"
        android:layout_weight="1"
        app:buttonColor="@color/g_dark"
        app:glowColor="@color/neon_blue"
        app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
        android:id="@+id/red_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/back_button"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/leave_discussion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/leave_discussion"
            android:textAlignment="center"
            android:textColor="@color/red_neon"
            android:textSize="8pt"
            android:shadowColor="@color/white"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="5"
            android:layout_weight="1"
            android:fontFamily="sans-serif-thin" />
        <TextView
            android:visibility="gone"
            android:id="@+id/remove_discussion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/remove_discussion"
            android:textAlignment="center"
            android:textColor="@color/red_neon"
            android:textSize="8pt"
            android:shadowColor="@color/white"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="5"
            android:layout_weight="1"
            android:fontFamily="sans-serif-thin" />
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/red_settings">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:text="@string/discussion_title"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="12pt"
            android:shadowColor="@color/neon_blue"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="5"
            android:fontFamily="sans-serif-thin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <EditText
            android:id="@+id/title_field"
            android:textColor="@color/neon_blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/discussion_name_hint"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title"
            android:textColorHint="@color/neon_blue"
            android:backgroundTint="@color/neon_blue"
            android:padding="20dp"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/avatar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="@string/discussion_avatar"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="12pt"
            android:shadowColor="@color/neon_blue"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="5"
            android:fontFamily="sans-serif-thin"
            app:layout_constraintTop_toBottomOf="@id/title_field"
            app:layout_constraintStart_toStartOf="parent" />
        <LinearLayout
            android:id="@+id/avatar_side"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left"
            android:paddingLeft="25dp"
            android:paddingTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/avatar_title">
            <androidx.cardview.widget.CardView
                android:id="@+id/avatar_wrapper"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@color/white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:cardCornerRadius="314dp"
                android:elevation="10dp">
                <ImageView
                    android:id="@+id/avatar"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/group"
                    android:background="@color/black"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/change_avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="@string/change"
                android:textAlignment="center"
                android:textColor="@color/neon_blue"
                android:textSize="12pt"
                android:shadowColor="@color/neon_blue"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="5"
                android:fontFamily="sans-serif-thin"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
        </LinearLayout>
        <com.sanojpunchihewa.glowbutton.GlowButton
            android:id="@+id/save_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:background="@drawable/blue_empty_button"
            android:padding="15dp"
            android:text="@string/save_changes"
            android:textColor="@color/g_dark"
            android:textFontWeight="100"
            android:layout_marginTop="10dp"
            android:textSize="6pt"
            android:layout_weight="1"
            app:buttonColor="@color/neon_blue"
            app:glowColor="@color/neon_blue"
            app:layout_constraintTop_toBottomOf="@id/avatar_side"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/save_button"
            android:background="@color/transparent_light" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:id="@+id/members_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/settings"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center">
        <TextView
            android:id="@+id/members_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/discussion_members"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="10pt"
            android:shadowColor="@color/neon_blue"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="5"
            android:layout_weight="2"
            android:fontFamily="sans-serif-thin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <com.sanojpunchihewa.glowbutton.GlowButton
            android:id="@+id/add_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/blue_empty_button"
            android:padding="15dp"
            android:text="@string/add_members_button"
            android:textColor="@color/g_dark"
            android:textFontWeight="100"
            android:textSize="8pt"
            android:layout_weight="1.2"
            app:buttonColor="@color/neon_blue"
            app:glowColor="@color/neon_blue"
            app:layout_constraintTop_toBottomOf="@id/avatar_side"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/members_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="70dp"
        app:layout_constraintTop_toBottomOf="@id/members_head"
        app:layout_constraintBottom_toBottomOf="parent" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pick_images"
        android:visibility="gone"
        android:background="@color/transparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/pick_images_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@string/cancel"
            android:textSize="10pt"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent" />
        <GridView
            android:id="@+id/greed"
            android:numColumns="3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toTopOf="@id/pick_images_cancel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentDetails"
        class="com.chatlog.chatlog.Navigation"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>