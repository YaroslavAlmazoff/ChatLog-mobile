<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient4"
    tools:context=".CloudActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/cloud_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="14pt"
            android:layout_marginTop="5dp"
            android:text="@string/cloud_title"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:fontFamily="sans-serif-thin"/>
        <LinearLayout
            android:id="@+id/main_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/cloud_title"
            android:layout_marginTop="5dp">
            <com.sanojpunchihewa.glowbutton.GlowButton
                android:id="@+id/upload_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/blue_button"
                android:padding="17dp"
                android:layout_weight="1"
                android:text="@string/upload_file"
                android:textColor="@color/black"
                android:textFontWeight="200"
                android:textSize="16dp"
                app:buttonColor="@color/neon_blue"
                app:glowColor="@color/neon_blue" />
            <com.sanojpunchihewa.glowbutton.GlowButton
                android:id="@+id/create_folder_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/blue_button"
                android:padding="17dp"
                android:layout_weight="1"
                android:text="@string/create_dir"
                android:textColor="@color/neon_blue"
                android:textFontWeight="200"
                android:textSize="16dp"
                app:buttonColor="@color/black"
                app:glowColor="@color/neon_blue" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/create_folder_wrapper"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/main_buttons"
            android:orientation="vertical"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/create_folder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/upload_button"
                android:textSize="11pt"
                android:text="@string/create_folder"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:fontFamily="sans-serif-thin"/>
            <TextView
                android:id="@+id/create_folder_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/create_folder"
                android:textSize="9pt"
                android:text="@string/cancel"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textFontWeight="300"
                android:fontFamily="sans-serif-thin"/>
            <LinearLayout
                android:id="@+id/folder_creation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/create_folder_cancel"
                android:orientation="horizontal"
                android:paddingLeft="6dp"
                android:gravity="center">
                <EditText
                    android:id="@+id/folder_name_field"
                    android:background="@drawable/rounded_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/folder_name_hint"
                    android:textColor="@color/neon_blue"
                    android:layout_weight="1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/emailField"
                    android:textColorHint="@color/neon_blue"
                    android:padding="10dp" />
                <com.sanojpunchihewa.glowbutton.GlowButton
                    android:id="@+id/create_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/blue_button"
                    android:padding="20dp"
                    android:layout_weight="1.4"
                    android:text="@string/create"
                    android:textColor="@color/black"
                    android:textFontWeight="100"
                    android:textSize="14dp"
                    app:buttonColor="@color/neon_blue"
                    app:glowColor="@color/neon_blue"
                    app:layout_constraintTop_toBottomOf="@id/cloud_title" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/filters"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/create_folder_wrapper"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <android.widget.SearchView
                android:id="@+id/search_field"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textColor="@color/black"
                android:background="@drawable/search_field"
                android:layout_marginTop="10dp" />
            <ImageView
                android:id="@+id/sort"
                android:layout_marginLeft="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/preferences"
                android:layout_marginTop="10dp" />
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/path"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/filters"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/files_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingTop="10dp"
        android:paddingBottom="70dp"
        app:layout_constraintTop_toBottomOf="@id/head"
        app:layout_constraintBottom_toBottomOf="@id/fragmentDetails"
        android:background="@color/transparent"/>
    <TextView
        android:id="@+id/no_files"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="11pt"
        android:layout_marginTop="10dp"
        android:text="@string/create_folder"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:fontFamily="sans-serif-thin"
        app:layout_constraintTop_toTopOf="@id/files_list"
        app:layout_constraintBottom_toBottomOf="@id/files_list"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fullscreen"
        android:visibility="gone"
        android:background="@color/transparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/fullscreen_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@string/cancel"
            android:textSize="10pt"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentDetails"
        class="com.chatlog.chatlog.Navigation"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>