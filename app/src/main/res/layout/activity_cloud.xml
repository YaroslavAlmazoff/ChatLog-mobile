<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient4"
    tools:context=".CloudActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/cloud_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="14pt"
            android:layout_marginTop="5dp"
            android:text="@string/cloud_title"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:fontFamily="sans-serif-thin"/>
        <com.sanojpunchihewa.glowbutton.GlowButton
            android:id="@+id/upload_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/blue_button"
            android:padding="17dp"
            android:text="@string/upload_file"
            android:textColor="@color/black"
            android:textFontWeight="200"
            android:textSize="16dp"
            android:layout_marginTop="5dp"
            app:buttonColor="@color/neon_blue"
            app:glowColor="@color/neon_blue"
            app:layout_constraintTop_toBottomOf="@id/cloud_title" />
        <TextView
            android:id="@+id/create_folder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/upload_button"
            android:textSize="11pt"
            android:layout_marginTop="10dp"
            android:text="@string/create_folder"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:fontFamily="sans-serif-thin"/>
        <LinearLayout
            android:id="@+id/folder_creation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/create_folder"
            android:orientation="horizontal"
            android:paddingLeft="6dp"
            android:gravity="center">
            <EditText
                android:id="@+id/folder_name_field"
                android:background="@drawable/rounded_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/folder_name_hint"
                android:textColor="@color/neon_blue"
                android:layout_weight="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/emailField"
                android:textColorHint="@color/neon_blue"
                android:padding="10dp" />
            <com.sanojpunchihewa.glowbutton.GlowButton
                android:id="@+id/create_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/blue_button"
                android:padding="20dp"
                android:layout_weight="1.4"
                android:text="@string/create"
                android:textColor="@color/black"
                android:textFontWeight="100"
                android:textSize="14dp"
                app:buttonColor="@color/neon_blue"
                app:glowColor="@color/neon_blue"
                app:layout_constraintTop_toBottomOf="@id/cloud_title" />
        </LinearLayout>
        <View
            android:id="@+id/hr"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="17dp"
            app:layout_constraintTop_toBottomOf="@id/folder_creation"
            android:background="@color/transparent_light" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/path"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/hr"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/files_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingTop="10dp"
        android:paddingBottom="70dp"
        app:layout_constraintTop_toBottomOf="@id/head"
        app:layout_constraintBottom_toBottomOf="@id/fragmentDetails"
        android:background="@color/transparent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fullscreen"
        android:visibility="gone"
        android:background="@color/transparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/fullscreen_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@string/cancel"
            android:textSize="10pt"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentDetails"
        class="com.chatlog.chatlog.Navigation"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>