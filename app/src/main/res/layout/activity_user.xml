<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".UserActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent_dark">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/user_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/user_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <androidx.cardview.widget.CardView
                    android:id="@+id/user_avatar_wrapper"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@color/transparent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:cardCornerRadius="314dp"
                    android:elevation="10dp">
                    <ImageView
                        android:id="@+id/user_avatar"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/nav_profile"
                        android:background="@drawable/rounded"/>
                </androidx.cardview.widget.CardView>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/user_avatar_wrapper"
                    app:layout_constraintBottom_toBottomOf="parent">
                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:fontFamily="sans-serif-thin"
                        android:background="@drawable/rounded"
                        android:textSize="12pt"
                        android:padding="3dp"
                        android:layout_margin="2dp"
                        android:textFontWeight="200"
                        android:textColor="@color/neon_blue"
                        android:text="@string/user_name"/>
                    <TextView
                        android:id="@+id/user_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/user_name"
                        app:layout_constraintStart_toStartOf="parent"
                        android:fontFamily="sans-serif-thin"
                        android:background="@drawable/rounded"
                        android:textSize="12pt"
                        android:padding="3dp"
                        android:layout_margin="2dp"
                        android:textFontWeight="200"
                        android:textColor="@color/green_neon"
                        android:text="@string/user_date"/>
                    <TextView
                        android:id="@+id/user_place"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/user_date"
                        app:layout_constraintStart_toStartOf="parent"
                        android:fontFamily="sans-serif-thin"
                        android:background="@drawable/rounded"
                        android:textSize="12pt"
                        android:padding="3dp"
                        android:layout_margin="2dp"
                        android:textFontWeight="200"
                        android:textColor="@color/orange_neon"
                        android:text="@string/user_name"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:id="@+id/user_about_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:padding="5dp"
                android:text="@string/user_about_me"
                android:fontFamily="sans-serif-thin"
                android:textSize="10pt"
                android:background="@drawable/rounded"
                android:textColor="@color/white"
                android:textFontWeight="200"
                app:layout_constraintTop_toBottomOf="@id/user_main"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentDetails"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        class="com.chatlog.chatlog.Navigation"/>
</androidx.constraintlayout.widget.ConstraintLayout>